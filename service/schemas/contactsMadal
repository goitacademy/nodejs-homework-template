const mongoose = require('mongoose');
const { Schema } = mongoose;

const contactsSchema = new Schema({
  name: {
    type: String,
    required: [true, 'Set name for contact'],
  },
  email: {
    type: String,
  },
  phone: {
    type: String,
  },
  favorite: {
    type: Boolean,
    default: false,
  },
  createdAt: { type: Date, default: Date.now },
  updateAt: { type: Date },
});

const Contact = mongoose.model(
  'contacts',
  contactsSchema
);

module.exports = {
  Contact,
};
